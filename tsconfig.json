{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES2019",
        "outDir": "lib",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*"
    ]
}